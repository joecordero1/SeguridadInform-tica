@model IEnumerable<SeguridadInformática.Models.Activo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Riesgos Asociados
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @foreach (var riesgoPorActivo in item.RiesgosPorActivo)
                    {
                        @riesgoPorActivo.Riesgo.Descripcion

                        <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id_Activo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id_Activo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_Activo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
